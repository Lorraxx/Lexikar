<body style="        height: 100%;
        background: rgb(9,9,121);
        background: linear-gradient(0deg, rgba(9,9,121,1) 10%, rgba(70,139,200,1) 80%, rgba(112,230,255,1) 100%);
        background-repeat: no-repeat;
        background-attachment: fixed;
        padding-bottom: 0;
        display: flex;
        flex-direction: column;
">
    <div class="navbar-fixed-top navbar" style="background-color: darkblue; ">
        <style scoped>
            .wainb a {
                color: white;
            }
            /*            .wainb a:focus:hover, .wainb a:hover {
                    color: navajowhite;
