                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Domů", "Index", "Translation")</li>
                    <li>@Html.ActionLink("O aplikaci", "About", "Translation")</li>
                    <li>@Html.ActionLink("Help", "Help", "Translation")</li>
                    @*<li>@Html.ActionLink("Nahrát CSV", "FileUpload", "Translation")</li>*@
                    @*<li>@Html.ActionLink("Kontakt", "Contact", "Translation")</li>*@
                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content" style="height:100%; padding-left: 15px; padding-right: 15px; padding-top:50px">
        <div style="height: 100%;">
            @RenderBody()
        </div>

        @*<div class="container" style="background-color: aliceblue; flex: 1">
